header.header
  nav.navbar
    - var links = ['index', 'task', 'comment', 'project', 'calendar', 'people', 'logout', 'setting', 'switch']
    - var icons = ['home', 'tasks', 'comments', 'info-circle', 'calendar', 'phone', 'power-off', 'cog', 'refresh']
    - var texts = ['首页', '任务', '讨论区', '动态回顾', '日程', '通讯录', '注销', '设置', '切换项目']
    each link, i in links
      if i < 6 && page != links[i]
        a.left(href='/#{links[i]}', class='link-#{links[i]}')
          i.fa(class='fa-#{icons[i]}')
          span &nbsp;#{texts[i]}
      else if i < 6 && page == links[i]
        a.left.active(href='/#{links[i]}', class='link-#{links[i]}')
          i.fa(class='fa-#{icons[i]}')
          span &nbsp;#{texts[i]}
      else
        a.right(href='/#{links[i]}', class='link-#{links[i]}')
          i.fa(class='fa-#{icons[i]}')
          span &nbsp;#{texts[i]}
  .title-block
    h1.left.title #{page === 'index' && data.groupname || page === 'project' && (data.title + ' - ' + data.groupname) || page === 'people' && data.groupname}
    span.right.notification
      i.fa.fa-bell
    img.right.user-icon(src='/images/nophoto.png')
    span.right.search-block
      span.search-btn
        i.fa.fa-search
      input.search(type='text', placeholder='Search')