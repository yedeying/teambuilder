extends layout

block content
  .account-page
    .banner
      img.image(src="/images/topbanner.jpg")
      .title
        h1 teambuilder
        span 高效简单, 简化您的工作
    .form-unit
      form.form(method="post", action="/signup")
        input.email(id="email", name="email", type="email", placeholder="邮箱")
        input.username(id="username", name="username", type="text", placeholder="您的名字")
        input.password(id="password", name="password", type="password", placeholder="密码")
        input.submit.register(type="submit", value="注册")
        div.alert.success
      .action-wrapper
        a.forget(href="/login") 返回登录
  include includes/sea
  script.
    seajs.use('/javascripts/signup');